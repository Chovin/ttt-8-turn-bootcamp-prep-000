#!/usr/bin/env ruby
require_relative '../lib/turn'

board = Array.new 9, " "

puts "Welcome to Tic Tac Toe!"
display_board(board)

loop do
  print "Please enter 1-9: "
  choice = input_to_index(gets.chomp)
  break if valid_move?(choice)
end
turn(board)

